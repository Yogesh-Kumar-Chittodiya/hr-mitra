<%= form_with model: employee do |form| %>
    
    <% if @employee.errors.any? %>
        <div>
                <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this post from being saved:</h2>
                <ul>
                <% @employee.errors.each do |error| %>
                    <li><%= error %></li>
                <% end %>
                </ul>
        </div>
    <% end %>

        <p class="">Those fields are mandatory which has * symbol.</p>
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <span><%= form.label :first_name, class: 'mb-2' %>*</span>
                    <%= form.text_field :first_name, class: 'form-control form-control-lg rounded-0' %>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <%= form.label :middle_name, class: 'mb-2' %>
                    <%= form.text_field :middle_name, class: 'form-control form-control-lg rounded-0' %>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <span><%= form.label :last_name, class: 'mb-2' %>*</span>
                    <%= form.text_field :last_name, class: 'form-control form-control-lg rounded-0' %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <span><%= form.label :personal_email, class: 'mb-2' %>*</span>
                    <%= form.text_field :personal_email, class: 'form-control form-control-lg rounded-0' %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <span><%= form.label :address_line_1, class: 'mb-2' %>*</span>
                    <%= form.text_field :address_line_1, class: 'form-control form-control-lg rounded-0' %>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <%= form.label :address_line_2, class: 'mb-2' %>
                    <%= form.text_field :address_line_2, class: 'form-control form-control-lg rounded-0' %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3">
                <div class="form-group">
                    <span><%= form.label :city, class: 'mb-2' %>*</span>
                    <%= form.text_field :city, class: 'form-control form-control-lg rounded-0' %>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    <span><%= form.label :state, class: 'mb-2' %>*</span>
                    <%= form.text_field :state, class: 'form-control form-control-lg rounded-0' %>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    <span><%= form.label :country, class: 'mb-2' %>*</span>
                    <%= form.text_field :country, class: 'form-control form-control-lg rounded-0' %>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    <span><%= form.label :pincode, class: 'mb-2' %>*</span>
                    <%= form.text_field :pincode, class: 'form-control form-control-lg rounded-0' %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 mt-4">
                <%= form.submit class: 'btn btn-primary btn-lg rounded-0' %>
                <%= link_to 'Back to Employees', employees_path, class: 'btn btn-outline-primary btn-lg rounded-0' %>
            </div>
        </div>
        
    <% end %>